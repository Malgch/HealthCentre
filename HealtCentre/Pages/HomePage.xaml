<Page x:Class="HealthCentre.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HealthCentre.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <Label Content="WELCOME TO HEALTH CENTRE APP" 
               FontFamily="Arial"
               FontWeight="DemiBold"
               FontSize="22"
               Height="40" 
               Margin="0,30,0,0" 
               VerticalAlignment="Top" 
               HorizontalAlignment="Center"
               Width="400" Foreground="White">
            <Label.Background>
                <ImageBrush/>
            </Label.Background>
        </Label>
        <Button 
                x:Name="AddPatientButton"
                Content="Add New Patient" 
                HorizontalAlignment="Center" 
                Margin="0,130,0,0" 
                VerticalAlignment="Top" 
                Height="50" Width="200" 
                FontSize="16" 
                Background="White" 
                FontWeight="Bold" 
                FontFamily="Segoe UI" Click="AddPatientButton_Click"/>

    </Grid>
</Page>
